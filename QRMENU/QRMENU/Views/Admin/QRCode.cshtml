
@{
    ViewBag.Title = "QRCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("QRCode", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="form-group">
            <input type="text" class="form-control" name="qrcode" value="@ViewBag.url" readonly/>
            <br />
            <br />
            <input type="submit" class="form-control" value="QR Kod Oluştur" />

            @if (ViewBag.QRCodeImage != null)
            {
                <img src="@ViewBag.QRCodeImage" alt="" style="height:200px; width:200px;" />
                <a href="@ViewBag.QRCodeImage" download="" class="btn btn-dark">QR Kodu indir</a>
            }
        </div>
    </div>
            
}