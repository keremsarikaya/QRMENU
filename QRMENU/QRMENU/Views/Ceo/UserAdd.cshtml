
@model QRMENU.Models.admin


@{
    ViewBag.Title = "UserAdd";
    Layout = "~/Views/Shared/_Panel.cshtml";
}


<div class="container-fluid">
    <form class="form-group" action="/Ceo/UserAdd" method="post" style="margin-top:25px;">
        @Html.AntiForgeryToken()
        <div>
            <label>Kullanıcı Adı</label>
            <input type="text" class="form-control" name="username" required="" maxlength="30" />
        </div>
        <div style="margin-top:15px">
            <label>Şifre</label>
            <input type="text" class="form-control" name="password" required="" />
        </div>

        <div style="margin-top:15px">
            <label>Kullanıcı Telefon Numarası</label>
            <input type="text" class="form-control" name="user_tel" required="" />
        </div>
        <div class="form-group">
            <label>Kullanıcı E-Mail</label>
            <input  type="text" name="user_mail" class="form-control" required="" />
        </div>
        <div class="form-group">
            <label>Kullanıcı İsim</label>
            <input type="text" name="isim" class="form-control" required="" />
        </div>
        <div class="form-group">
            <label>Kullanıcı Soyisim</label>
            <input type="text" name="soyisim" class="form-control" required="" />
        </div>
        <div style="margin-top:15px">
            <button type="submit" class="btn btn-info">KULLANICI EKLE</button>
        </div>
    </form>
</div>
