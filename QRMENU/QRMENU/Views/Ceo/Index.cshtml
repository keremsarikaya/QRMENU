    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı Adı</th>
                            <th>Şifre</th>
                            <th>Telefon</th>
                            <th>E-Mail</th>
                            <th>İsim</th>
                            <th>Soyisim</th>
                            <th>Şube</th>
                            <th>Ödeme</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.username</td>
                            <td>@item.password</td>
                            <td>@item.user_tel</td>
                            <td>@item.user_mail</td>
                            <td>@item.isim</td>
                            <td>@item.soyisim</td>
                            @if (item.user_branch == false)
                            {
                                <td style="background-color:red">@item.user_branch</td>
                            }
                            else
                            {
                                <td style="background-color:green">@item.user_branch</td>
                            }
                            @if (item.user_pay == false)
                            {
                                <td style="background-color:red">@item.user_pay</td>
                            }
                            else
                            {
                                <td style="background-color:green">@item.user_pay</td>
                            }
                            <td><a href="/userupdate/@item.id" class="btn btn-success">Güncelle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>